#include <stdio.h>
#include <ctype.h>
int main(){
    char name[100];
    printf("Enter full name: ");
    fgets(name, sizeof(name), stdin);
    int i=0;
    while(name[i]){
        if(i==0 && !isspace(name[i]) && isalpha(name[i])) printf("%c", toupper(name[i]));
        if(name[i]==' '){
            int j=i+1;
            while(name[j]==' ') j++;
            if(isalpha(name[j])) printf("%c", toupper(name[j]));
        }
        i++;
    }
    printf("\n");
    return 0;
}
